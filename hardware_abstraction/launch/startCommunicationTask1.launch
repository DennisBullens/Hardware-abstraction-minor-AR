<launch>

    <arg name="portDevA" default="0" />
    <arg name="portDevB" default="1" />

    <node pkg="hardware_abstraction" type="mainProgramTask1.py" name="main" />

    <node pkg="rosserial_python" type="serial_node.py" name="device_A">
        <param name="port" value="/dev/ttyACM$(arg portDevA)" />
        <param name="baud" value="57600" />
    </node>

    <node pkg="rosserial_python" type="serial_node.py" name="device_B" >
        <param name="port" value="/dev/ttyACM$(arg portDevB)" />
        <param name="baud" value="57600" />
    </node>

</launch>